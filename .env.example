# API defaults (Node.js Fastify service)
API_PORT=8080
API_HOST=0.0.0.0
SQLITE_PATH=./data/metadata.sqlite
ENABLE_SQLITE_WAL=true
LOG_LEVEL=info
REQUEST_TIMEOUT_MS=10000
RATE_LIMIT_ENABLED=true

# CLI defaults (Python Typer ingestion)
CLI_API_URL=http://localhost:8080
CLI_API_TOKEN=changeme
CLI_ORG_ID=demo-org
CLI_INPUT_PATH=./fixtures/sample-nodes.json
CLI_BATCH_SIZE=500

# Connector defaults (Java Spring Boot)
CONNECTOR_ID=http-forwarder
CONNECTOR_API_URL=http://localhost:8080
CONNECTOR_API_TOKEN=changeme
CONNECTOR_HEARTBEAT_INTERVAL_SECONDS=30
CONNECTOR_BATCH_SIZE=500

# Registry + SBOM/Signing
IMAGE_REGISTRY=ghcr.io/ganesh47
ENABLE_SBOM_SIGNING=true
