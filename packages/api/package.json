{
  "name": "metadata-api",
  "version": "0.1.0",
  "description": "Fastify + Drizzle API for the SQLite metadata platform",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm run start:dev",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "migrate": "ts-node --esm ./scripts/migrate.ts",
    "seed": "ts-node --esm ./scripts/seed.ts",
    "build": "tsc -p tsconfig.json",
    "start:dev": "ts-node --esm src/index.ts",
    "start": "node dist/index.js",
    "openapi:sync": "cp ../../specs/001-plan-alignment/contracts/api.yaml src/contracts/api.yaml",
    "openapi:client": "openapi-generator-cli generate -i src/contracts/api.yaml -g typescript-fetch -o ../cli/src/client --additional-properties=supportsES6=true,npmName=metadata-client"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "better-sqlite3": "^9.4.4",
    "drizzle-orm": "^0.36.4",
    "fastify": "^4.28.1",
    "fastify-plugin": "5.1.0",
    "pino": "^9.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.10.2",
    "@types/better-sqlite3": "^7.6.10",
    "@types/node": "^22.8.6",
    "drizzle-kit": "^0.26.2",
    "eslint": "^9.14.0",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vitest": "^2.1.1"
  }
}
